<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="
                http://symfony.com/schema/dic/services
                http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>
		<service id="service_provider"
				 class="application\Infrastructure\Core\ServiceProvider"/>

		<service id="database"
				 class="application\Infrastructure\Core\CIDatabase"/>

		<service id="default_email_configurator"
				 class="application\Infrastructure\Core\Configurators\EmailConfigConfigurator"/>

		<service id="default_ws_configurator"
				 class="application\Infrastructure\Core\Configurators\WSConfigConfigurator"/>

		<service id="default_tubapay_configurator"
				 class="application\Infrastructure\Core\Configurators\TubaPayConfigConfigurator"/>

		<service id="common_policy_repository"
				 class="application\Infrastructure\Policy\CommonPolicyRepository">
			<argument type="service" id="database"/>
		</service>

		<service id="attribute_repository"
				 class="application\Infrastructure\Policy\Common\AttributeRepository">
			<argument type="service" id="database"/>
		</service>

		<service id="attribute_repository"
				 class="application\Infrastructure\Policy\Common\AttributeRepository">
			<argument type="service" id="database"/>
		</service>

		<service id="premium_calculator_krbr_service"
				 class="application\Application\Service\Product\Travel\KRBR\CalculatePolicyPremiumService">
			<argument type="service" id="common_policy_repository"/>
			<argument type="service" id="bdt_repository"/>
			<argument type="service" id="codif_repository"/>
		</service>



	</services>
</container>
