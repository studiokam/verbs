<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
		   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		   xsi:schemaLocation="
                http://symfony.com/schema/dic/services
                http://symfony.com/schema/dic/services/services-1.0.xsd">

	<services>

		<service id="database"
				 class="application\Infrastructure\Core\CIDatabase"/>

		<!--Repository-->

		<service id="verb_repository"
				 class="application\Infrastructure\Verb\VerbRepository">
			<argument type="service" id="database"/>
		</service>

		<service id="group_repository"
				 class="application\Infrastructure\Group\GroupRepository">
			<argument type="service" id="database"/>
		</service>


		<!--Services-->

		<service id="create_verb_service"
				 class="application\Application\Service\CreateVerbService">
			<argument type="service" id="database"/>
		</service>

		<service id="create_group_service"
				 class="application\Application\Service\CreateGroupService">
			<argument type="service" id="database"/>
		</service>


		<!--Get data-->
		<service id="get_verbs_list"
				 class="application\Application\Service\GetVerbsListService">
			<argument type="service" id="database"/>
		</service>

		<service id="get_groups_list"
				 class="application\Application\Service\GetGroupsListService">
			<argument type="service" id="database"/>
		</service>

		<!--Delete data-->
		<service id="delete_group_service"
				 class="application\Application\Service\DeleteGroupService">
			<argument type="service" id="database"/>
		</service>

	</services>
</container>
